<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scal_4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/scal_5dp"
        android:paddingRight="@dimen/scal_5dp" >

        <com.custom.MyTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chat_bubble_blue"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/scal_4dp"
            android:paddingLeft="@dimen/scal_3dp"
            android:paddingRight="@dimen/scal_13dp"
            android:paddingTop="@dimen/scal_4dp"
            android:text="Repedit \n abor \n upta"
            android:textColor="@color/btn_email_signin"
            android:textSize="@dimen/txt_10" />

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_pic" />
    </LinearLayout>

</LinearLayout>