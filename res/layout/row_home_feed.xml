<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <!-- <include -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- layout="@layout/row_home_feed_header" /> -->

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_email_signin"
        android:padding="@dimen/scal_10dp"
        android:text="Header"
        android:textColor="@color/home_feed_header"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scal_5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/scal_5dp"
            android:layout_marginRight="@dimen/scal_5dp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal" >

                <com.custom.MyTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/flight_field_big"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/scal_3dp"
                    android:text="CHRISTA L"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16" />

                <com.custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/scal_5dp"
                    android:layout_weight="3"
                    android:background="@drawable/flight_field_small"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/scal_25dp"
                    android:text="9"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <com.custom.MyTextView
                            android:id="@+id/tvFlightNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flight_field_medium"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="BA 109"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_8" />

                        <com.custom.MyTextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/flight_field_medium"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="06/25"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_3dp"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <com.custom.MyTextView
                            android:id="@+id/tvArrDep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flight_field_medium"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="LON-JFK"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_8" />

                        <com.custom.MyTextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/flight_field_medium"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="11:18AM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_8" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/scal_3dp"
                        android:layout_marginTop="-2dp"
                        android:layout_weight="1"
                        android:background="@drawable/flight_logo_field"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ivAirlineImage"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/logo_britishairway" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/scal_5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal|top"
                android:orientation="vertical" >

                <com.custom.MyTextView
                    android:id="@+id/tvSeatNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flight_field_medium"
                    android:gravity="center_vertical|right"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="6B"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/scal_3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flight_btn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>