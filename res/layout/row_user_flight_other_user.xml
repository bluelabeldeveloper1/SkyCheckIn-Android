<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/row_user_flight_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/scal_5dp"
                android:paddingRight="@dimen/scal_5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_britishairway" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <com.custom.MyTextView
                                android:id="@+id/tvflightCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/scal_7dp"
                                android:layout_marginRight="@dimen/scal_7dp"
                                android:gravity="center"
                                android:text="BA 8888"
                                android:textColor="@color/btn_email_signin"
                                android:textSize="@dimen/txt_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:orientation="vertical" >

                            <com.custom.MyTextView
                                android:id="@+id/tvDepTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/scal_7dp"
                                android:layout_marginRight="@dimen/scal_7dp"
                                android:gravity="center"
                                android:text="SEA 06:45AM"
                                android:textColor="@color/btn_email_signin"
                                android:textSize="@dimen/txt_10" />

                            <com.custom.MyTextView
                                android:id="@+id/tvArrTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/scal_7dp"
                                android:layout_marginRight="@dimen/scal_7dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="YUR 08:05AM"
                                android:textColor="@color/btn_email_signin"
                                android:textSize="@dimen/txt_10" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/gray_divider"
            android:layout_gravity="bottom" />
    </FrameLayout>

</LinearLayout>