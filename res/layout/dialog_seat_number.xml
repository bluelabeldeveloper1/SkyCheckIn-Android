<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scal_25dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spDigit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Spinner
            android:id="@+id/spChar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scal_25dp"
        android:orientation="horizontal" >

        <com.custom.MyButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/scal_12dp"
            android:layout_weight="1"
            android:background="@color/btn_logout_cancel"
            android:padding="@dimen/scal_6dp"
            android:text="@string/btn_cancel"
            android:textColor="@color/btn_email_signin" />

        <com.custom.MyButton
            android:id="@+id/btnSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scal_12dp"
            android:layout_weight="1"
            android:background="@color/btn_email_signin"
            android:padding="@dimen/scal_6dp"
            android:text="@string/btn_set"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>