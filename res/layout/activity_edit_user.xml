<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.custom.MyTextView
            android:id="@+id/tvCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scal_5dp"
            android:background="@color/btn_header_cancel"
            android:padding="@dimen/scal_5dp"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/scal_15dp" />

        <com.custom.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_header_edit_user"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_17" />

        <com.custom.MyTextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/scal_5dp"
            android:background="@color/blue"
            android:padding="@dimen/scal_5dp"
            android:text="@string/btn_save"
            android:textColor="@color/white"
            android:textSize="@dimen/scal_15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.custom.MyEditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_25dp"
                android:background="@drawable/img_text_field"
                android:hint="@string/hint_firt_name"
                android:paddingLeft="@dimen/scal_5dp"
                android:paddingRight="@dimen/scal_5dp"
                android:singleLine="true"
                android:textSize="@dimen/txt_15" />

            <com.custom.MyEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_15dp"
                android:background="@drawable/img_text_field"
                android:hint="@string/hint_last_name"
                android:paddingLeft="@dimen/scal_5dp"
                android:paddingRight="@dimen/scal_5dp"
                android:singleLine="true"
                android:textSize="@dimen/txt_15" />

            <LinearLayout
                android:id="@+id/llFacebookLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.custom.MyEditText
                    android:id="@+id/etEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scal_20dp"
                    android:layout_marginRight="@dimen/scal_20dp"
                    android:layout_marginTop="@dimen/scal_15dp"
                    android:background="@drawable/img_text_field"
                    android:hint="@string/hint_email_id"
                    android:paddingLeft="@dimen/scal_5dp"
                    android:paddingRight="@dimen/scal_5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_15" />

                <!-- <com.custom.MyTextView -->
                <!-- android:id="@+id/tvPassword" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="@dimen/scal_20dp" -->
                <!-- android:layout_marginRight="@dimen/scal_20dp" -->
                <!-- android:layout_marginTop="@dimen/scal_15dp" -->
                <!-- android:background="@drawable/img_text_field" -->
                <!-- android:hint="@string/hint_password" -->
                <!-- android:paddingLeft="@dimen/scal_5dp" -->
                <!-- android:paddingRight="@dimen/scal_5dp" -->
                <!-- android:singleLine="true" -->
                <!-- android:textSize="@dimen/txt_15" /> -->

                <com.custom.MyEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scal_20dp"
                    android:layout_marginRight="@dimen/scal_20dp"
                    android:layout_marginTop="@dimen/scal_15dp"
                    android:background="@drawable/img_text_field"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/scal_5dp"
                    android:paddingRight="@dimen/scal_5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_15" />

                <com.custom.MyEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scal_20dp"
                    android:layout_marginRight="@dimen/scal_20dp"
                    android:layout_marginTop="@dimen/scal_15dp"
                    android:background="@drawable/img_text_field"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/scal_5dp"
                    android:paddingRight="@dimen/scal_5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_15"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_15dp"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/llMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_male_female" />

                    <com.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scal_5dp"
                        android:layout_marginRight="@dimen/scal_10dp"
                        android:text="@string/txt_male"
                        android:textColor="@color/btn_email_signin"
                        android:textSize="@dimen/txt_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scal_15dp"
                    android:layout_marginRight="@dimen/scal_10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_male_female" />

                    <com.custom.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scal_5dp"
                        android:layout_marginRight="@dimen/scal_5dp"
                        android:text="@string/txt_female"
                        android:textColor="@color/btn_email_signin"
                        android:textSize="@dimen/txt_12" />
                </LinearLayout>

                <com.custom.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/scal_5dp"
                    android:layout_marginRight="@dimen/scal_10dp"
                    android:text="@string/txt_optional"
                    android:textColor="@color/btn_email_signin"
                    android:textSize="@dimen/txt_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivUserPicMain"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/btn_email_signin"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/scal_10dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.custom.MyTextView
                        android:id="@+id/tvChangeProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/scal_3dp"
                        android:layout_marginLeft="@dimen/scal_5dp"
                        android:layout_weight="1"
                        android:background="@color/btn_email_signin"
                        android:gravity="center"
                        android:text="@string/btn_change_profile_pic"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_15" />

                    <com.custom.MyTextView
                        android:id="@+id/tvRemoveProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scal_5dp"
                        android:layout_marginTop="@dimen/scal_3dp"
                        android:layout_weight="1"
                        android:background="@color/btn_email_signin"
                        android:gravity="center"
                        android:text="@string/btn_remove_profile_pic"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_15" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_10dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ivUserPic1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/btn_email_signin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/ivPicSelection1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/selector_user_pic" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_7dp" >

                        <ImageView
                            android:id="@+id/ivUserPic2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/btn_email_signin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/ivPicSelection2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/selector_user_pic" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_7dp" >

                        <ImageView
                            android:id="@+id/ivUserPic3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/btn_email_signin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/ivPicSelection3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/selector_user_pic" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_7dp" >

                        <ImageView
                            android:id="@+id/ivUserPic4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/btn_email_signin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/ivPicSelection4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/selector_user_pic" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scal_7dp" >

                        <ImageView
                            android:id="@+id/ivUserPic5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/btn_email_signin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/ivPicSelection5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/selector_user_pic" />
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <com.custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_10dp"
                android:gravity="center_vertical|left"
                android:text="@string/txt_personal_message"
                android:textColor="@color/btn_email_signin"
                android:textSize="@dimen/txt_15" />

            <com.custom.MyEditText
                android:id="@+id/etPersonalMessage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/scal_15dp"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:layout_marginRight="@dimen/scal_20dp"
                android:layout_marginTop="@dimen/scal_15dp"
                android:background="@drawable/img_text_field"
                android:gravity="top|left"
                android:hint="@string/hint_personal_message"
                android:padding="@dimen/scal_5dp"
                android:textSize="@dimen/txt_15" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>